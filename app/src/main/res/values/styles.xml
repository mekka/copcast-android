<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@color/bg_dark_block</item>
        <item name="android:textColor">@color/text_dark_block</item>
        <item name="android:buttonStyle">@style/button_default</item>
        <item name="colorAccent">@color/summary_color</item>
        <item name="android:textColorSecondary">@color/summary_color</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="AppThemePreferences" parent="android:Theme.Holo">
        <!-- equals AppTheme, but with a dark parent to allow dark dialogs in preferences   -->
        <item name="android:windowBackground">@color/bg_dark_block</item>
        <item name="android:textColor">@color/text_dark_block</item>
        <item name="android:buttonStyle">@style/button_default</item>
        <item name="colorAccent">@color/summary_color</item>
        <item name="android:textColorSecondary">@color/summary_color</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="button_default">
        <item name="android:background">@drawable/button_default</item>
    </style>

    <style name="button_blue">
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <!-- Popup Menu Background Color styles -->
    <style name="MyPopupMenu"
        parent="@android:style/Theme.Holo">
        <item name="android:popupBackground">@color/bg_button_default</item>
    </style>
    <!-- Popup Menu Text Color styles -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/text_dark_block</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
    </style>
</resources>
